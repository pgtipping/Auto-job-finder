# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=your_custom_api_url_here_if_needed

# Database Configuration (for future implementation)
DATABASE_URL=postgresql://username:password@localhost:5432/autojobfinder

# LinkedIn API Configuration (for future implementation)
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# ApplyRight Integration
APPLYRIGHT_API_URL=https://api.applyright.example.com
APPLYRIGHT_API_KEY=your_applyright_api_key_here
APPLYRIGHT_WEBHOOK_SECRET=your_webhook_secret_here
APPLYRIGHT_SHARED_AUTH_SECRET=your_shared_auth_secret

# Email Configuration (for future implementation)
EMAIL_SERVICE=smtp.example.com
EMAIL_USER=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@autojobfinder.com

# Authentication (for future implementation)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=86400

# Application Settings
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=exp://localhost:19000
PREMIUM_FEATURE_ENABLED=true

# Storage Configuration
STORAGE_PROVIDER=s3
S3_BUCKET=your_bucket_name
S3_REGION=your_region
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key

# Docker Configuration
DOCKER_VOLUME_PATH=/path/to/external/drive/auto-job-finder
DOCKER_NETWORK=auto-job-finder-network

# Cloud Automation Service (e.g., Browserless.io)
BROWSERLESS_API_KEY=your_browserless_api_key_here

# Automation Engine Settings
# AUTOMATION_SERVICE_URL=http://localhost:8080 # Replaced by Cloud Service
# SELENIUM_HEADLESS=true # Handled by Cloud Service
# CHROME_BINARY_LOCATION=/usr/bin/google-chrome-stable # Handled by Cloud Service
AUTOMATION_LOG_LEVEL=info
MAX_CONCURRENT_JOBS=5 # Max concurrent calls to cloud service
JOB_TIMEOUT_SECONDS=300 # Timeout for cloud service calls

# Fly.io Configuration
FLY_APP_NAME=auto-job-finder
FLY_REGION=ewr
FLY_ORGANIZATION=your_fly_organization
FLY_API_TOKEN=your_fly_api_token
